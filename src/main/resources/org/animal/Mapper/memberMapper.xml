<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.animal.mapper.mamberMapper">
	<!-- 회원가입 -->
	<insert id="signup">
		insert into member(id, pwd, name, phone, email)
		values(#{id},#{pwd},#{name},#{phone},#{email});
	</insert>
	<!-- 아이디 중복 체크 -->
	<select id="idcheck" resultType="org.animal.model.memberVO">
		select * from member where id=#{id}
	</select>
	<!-- 이메일 중복 체크 -->
	<select id="emailcheck" resultType="org.animal.model.memberVO">
		select * from member where email=#{email}
	</select>
		<!-- 전화번호 중복 체크 -->
	<select id="phonecheck" resultType="org.animal.model.memberVO">
		select * from member where phone=#{phone}
	</select>
</mapper>